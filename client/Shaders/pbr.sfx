	//OUT.tangent.xyz = mul(mul(IN.tangent, boneTransform), world).xyz;
	OUT.tangent.xyz = mul(IN.tangent, world).xyz;

	OUT.hPosition = OUT.clip_pos;
	OUT.debug_colour = IN.weights;
	return OUT;
