	vec4 clr=lerp(vec4(0.25,0.25,0.25,1.0),vec4(1.0,1.0,1.0,1.0),0.5*IN.normal.z+0.5);
//clr.rgb *= step(0.06,IN.debug_colour.g)*saturate(10.0*IN.debug_colour.rgb);
